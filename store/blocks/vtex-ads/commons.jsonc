{
  "rich-text#vtex-ads-sponsored-title": {
    "props": {
      "text": "Recomendados",
      "blockClass": ["new-home-titles", "new-home-shelf-titles"]
    },
    "title": "Ads title"
  },
  "rich-text#vtex-ads-sponsored-tag": {
    "props": {
      "text": "Patrocinado",
      "blockClass": ["vtex-ads-sponsored-tag"],
      "font": "t-mini"
    },

    "title": "Ads tag"
  },
  /**
   * Slider layout
   */
  "slider-layout#vtex-ads-slider-shelf": {
    "props": {
      "itemsPerPage": {
        "desktop": 5,
        "tablet": 3,
        "phone": 2
      },
      "showNavigationArrows": "desktopOnly",
      "showPaginationDots": "mobileOnly",
      "infinite": true,
      "blockClass": "new-home-slider"
    }
  },

  "slider-layout#vtex-ads-slider-shelf-2": {
    "props": {
      "itemsPerPage": {
        "desktop": 4,
        "tablet": 3,
        "phone": 2
      },
      "showNavigationArrows": "desktopOnly",
      "showPaginationDots": "mobileOnly",
      "infinite": true,
      "blockClass": "new-home-slider"
    }
  },
  /**
   * Product list
   */
