    // "blocks": ["product-summary.shelf#searchs"],
    // "blocks": ["product-summary.shelf#product-card-custom-ads"],
    "children": ["slider-layout#vtex-ads-slider-shelf"],
    "title": "VTEX Ads - Product shelf - Wrapper context"
  },
